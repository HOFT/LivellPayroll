@model AccountForgotPasswordModel
@{
    ViewBag.PageId = "extr-page";
}

@section topright{
    <span id="extr-page-header-space"> <span class="hidden-mobile text-color-white">Already registered?</span> <a href="@Url.Action("login", "account")" class="btn btn-primary">Sign In</a> </span>
}

<div id="content" class="container">
    <div class="row">
        @*@{ Html.RenderPartial("_LoginText"); }*@

        @{ Html.RenderPartial("_LoginBackground"); }
        <div class="col-sm-6 col-sm-offset-3 form-box" style="margin-top:100px">
            <div class="well no-padding">
                <form action="@Url.Action("forgotpassword", "account")" method="POST" id="login-form" class="smart-form client-form">
                    <header>
                        <h3><i class="fa fa-frown-o"></i> Reset password</h3>
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">E-mail</label>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="email" name="email">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter the email address the account was registered with</b>
                            </label>
                            <div class="note">
                                <a href="@Url.Action("login", "account")"><i class="fa fa-smile-o"></i> I remembered my password!</a>
                            </div>
                        </section>

                        <section>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">
                                <i class="fa fa-envelope"></i> 
                                Send email
                            </button>
                        </section>
                    </fieldset>
                </form>
            </div>
            @*@{ Html.RenderPartial("_SocialMedia"); }*@
        </div>
    </div>
</div>
@section pagespecific{
    <script type="text/javascript">
        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    email: {
                        required: true,
                        email: true
                    },
                },

                // Messages for form validation
                messages: {
                    email: {
                        required: 'Please enter your email address',
                        email: 'Please enter a VALID email address'
                    },
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}