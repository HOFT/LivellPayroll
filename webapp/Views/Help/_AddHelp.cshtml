<div class="modal fade" id="AddHelpModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <form id="Help-Add" method="post" action="/Help/SaveHelp">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel"><i class="fa fa-list-alt fa-pencil "></i>Help Document</h4>
                </div>
                <div class="Warning-Item">
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Title *</label>
                        <input class="form-control" type="text" id="Title" name="Title" placeholder="Please enter the title" maxlength="256">
                        <b class="tooltip tooltip-bottom-right">Don't forget your password</b>
                    </div>
                    <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Type *</label>
                                        @Html.DropDownList("Type", ViewBag.HelpType as SelectList, "Please select the type", new { @class = "form-control"})
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Path </label>
                                        <div class="input-group">
                                            <span class="input-group-addon" id="Type-Path">/</span>
                                            <input class="form-control" type="text" id="Path" name="Path" placeholder="Action / Id(Name)" maxlength="128">
                                        </div>
                                    </div>
                                </div>
                            </div>
                    <div class="form-group">
                        <label>Keyword </label>
                        <input class="form-control tagsinput" type="text" id="Keyword" name="Keyword" placeholder="Type and enter to add tag" data-role="tagsinput" maxlength="256">
                    </div>
                    <div class="form-group">
                        <label>Content *</label>
                        <textarea class="form-control" id="Content" name="Content" placeholder="Please enter the content" rows="6" maxlength="512"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" id="btn-help-save" class="btn btn-primary">
                        Save
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </form>
</div><!-- /.modal -->